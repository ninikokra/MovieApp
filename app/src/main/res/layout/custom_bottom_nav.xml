<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_10dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/homeBottomButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:backgroundTint="@color/yellow_primary"
        android:drawableLeft="@drawable/ic_home_black"
        android:fontFamily="@font/montserrat_regular"
        android:paddingHorizontal="@dimen/dimen_30dp"
        android:text="@string/home_text"
        android:textAllCaps="false"
        android:textColor="@color/neutral_01_black"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/favoriteBottomButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/favoriteBottomButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:backgroundTint="@color/neutral_02_darkest_grey"
        android:drawableLeft="@drawable/ic_heart_white"
        android:fontFamily="@font/montserrat_regular"
        android:paddingHorizontal="@dimen/dimen_20dp"
        android:text="@string/favorites_text"
        android:textAllCaps="false"
        android:textColor="@color/neutral_08_whisper"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homeBottomButton"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
