<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/searchBarEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:background="@drawable/bkg_search_shape"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="@dimen/dimen_10dp"
        android:hint="@string/search_text"
        android:textColor="@color/neutral_08_whisper"
        android:paddingHorizontal="@dimen/dimen_20dp"
        android:paddingVertical="@dimen/dimen_10dp"
        android:textColorHint="@color/neutral_05_light_grey"
        android:textSize="@dimen/dimen_14sp"
        app:layout_constraintEnd_toStartOf="@+id/searchSelectionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/searchSelectionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:background="@drawable/ic_unselected_search"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/searchBarEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/searchBarEditText" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/genresBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="topRatedMoviesTextView,popularMoviesTextView" />


    <TextView
        android:id="@+id/popularMoviesTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/text_shape_yellow"
        android:paddingHorizontal="@dimen/dimen_14dp"
        android:paddingVertical="@dimen/dimen_6dp"
        android:text="Popular Movies"
        android:textAlignment="center"
        android:textColor="@color/neutral_01_black"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBarEditText" />

    <TextView
        android:id="@+id/topRatedMoviesTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/text_shape"
        android:paddingHorizontal="@dimen/dimen_14dp"
        android:paddingVertical="@dimen/dimen_6dp"
        android:text="Top Rated Movies"
        android:textAlignment="center"
        android:textColor="@color/neutral_08_whisper"
        android:textSize="@dimen/dimen_12sp"
        app:layout_constraintStart_toEndOf="@+id/popularMoviesTextView"
        app:layout_constraintTop_toBottomOf="@+id/searchBarEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>